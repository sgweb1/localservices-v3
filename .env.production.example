# ===================================
# LocalServices - Production Config
# ===================================

# Application
APP_NAME=LocalServices
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://localservices.pl

LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DAYS=14

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=localservices_prod
DB_USERNAME=lsuser
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Cache & Sessions
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=.localservices.pl
SESSION_SECURE_COOKIE=true

# Queue
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Email (Resend - Free tier: 3000/month)
MAIL_MAILER=smtp
MAIL_HOST=smtp.resend.com
MAIL_PORT=465
MAIL_USERNAME=resend
MAIL_PASSWORD=re_CHANGE_ME_YOUR_API_KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@localservices.pl
MAIL_FROM_NAME="${APP_NAME}"

# Google Maps API
GOOGLE_MAPS_API_KEY=CHANGE_ME_YOUR_GOOGLE_API_KEY

# Frontend URL (for CORS)
FRONTEND_URL=https://localservices.pl
SANCTUM_STATEFUL_DOMAINS=localservices.pl,www.localservices.pl

# ===================================
# Optional Services (commented out for MVP)
